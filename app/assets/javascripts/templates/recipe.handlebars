<div class="span8 full-recipe">
  <div class="recipe-head">
    <img src="/images/recipe.jpg">
    <div class="title-info">
      <h2>{{ title }}</h2>
      <p class="description">
        {{ description }}
      </p>
      <a class="vote" href="#" title="vote">
        <span class="vote-button">
          Em+
        </span>
        <span class="vote-count">
          100
        </span>
      </a>
      <div class="recipe-author">
        <h4>Recipe By:</h4>
